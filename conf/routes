# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST    /token                       api.rest.UsuarioRest.authenticar

GET     /logout                      @org.pac4j.play.ApplicationLogoutController.logout

GET     /usuarios/0                  api.rest.UsuarioRest.usuario

# ------ CRUD de campeonatos
GET      /campeonatos                api.rest.CampeonatoRest.todos

GET      /campeonatos/:id            api.rest.CampeonatoRest.buscar(id: Long)

POST     /campeonatos                api.rest.CampeonatoRest.inserir

POST     /campeonatos/:id            api.rest.CampeonatoRest.atualizar(id: Long)

DELETE   /campeonatos/:id            api.rest.CampeonatoRest.excluir(id: Long)

# ------- CRUD de eventos
GET      /eventos                    api.rest.EventoRest.todos

GET      /eventos/:id                api.rest.EventoRest.buscar(id: Long)

POST     /eventos                    api.rest.EventoRest.inserir

POST     /eventos/:id                api.rest.EventoRest.atualizar(id: Long)

DELETE   /eventos/:id                api.rest.EventoRest.excluir(id: Long)

# ------- CRUD de resultados
GET      /resultados                    api.rest.ResultadoRest.todos

GET      /resultados/:id                api.rest.ResultadoRest.buscar(id: Long)

POST     /resultados/:id                api.rest.ResultadoRest.inserir(id: Long)

POST     /resultados/atualizar/:id      api.rest.ResultadoRest.atualizar(id: Long)

DELETE   /resultados/:id                api.rest.ResultadoRest.excluir(id: Long)

# -------- CRUD de Validators
POST     /validators                 api.rest.ValidatorRest.inserir


POST    /token                       api.rest.UsuarioRest.authenticar

GET     /logout                      @org.pac4j.play.ApplicationLogoutController.logout

GET     /usuarios/0                  api.rest.UsuarioRest.usuario

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
